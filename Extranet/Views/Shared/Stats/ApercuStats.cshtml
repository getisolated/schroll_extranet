<div class="row px-2">
    <div class="col-md-3 mb-1 p-0">
        <div id="tauxStat" class="rounded-rectangle home-stats p-4 d-flex flex-column justify-content-between position-relative">
            <div>
                <h2 class="fw-bold mb-1">Taux de valorisation</h2>
                <p id="tauxDate" class="text-muted fw-bold mb-0" style="@(Model ? "display: none !important;" : "")"></p>
            </div>
            <div>
                <p id="tauxValue" class="home-stats-value fw-bold text-break"></p>
                <p id="tauxVariation" class="fw-bold text-muted"></p>
            </div>
            <div class="d-flex justify-content-between align-items-center" style="@(!Model ? "display: none !important;" : "")">
                <button class="btn btn-light btn-sm stat-action" data-stat="taux" data-action="previous"><i class="fas fa-chevron-left"></i></button>
                <p id="tauxCurrentMonth" class="text-muted fw-bold mb-0"></p>
                <button class="btn btn-light btn-sm stat-action" data-stat="taux" data-action="next"><i class="fas fa-chevron-right"></i></button>
            </div>
